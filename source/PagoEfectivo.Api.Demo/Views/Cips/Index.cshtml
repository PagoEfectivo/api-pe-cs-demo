ViewData["Title"] = "PÃ¡gina de Inicio";
Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="header-custom">
  <button class="btn btn-outline-warning" id="sidebarCollapseTitle" type="button">
    <div class="menu-icon"></div>
    <div class="menu-icon"></div>
    <div class="menu-icon"></div>
  </button><span class="header-title">CONFIGURACI&Oacute;N CIP</span>
</div>
<div class="content-main">    
  <div id="response"></div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label for="serviceId">ID de servicio:</label>
        <input class="form-control" id="serviceId" type="text">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label for="accessKey">Access key:</label>
        <input class="form-control" id="accessKey" type="password">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label for="secretKey">Secret key:</label>
        <input class="form-control" id="secretKey" type="password">
      </div>
    </div>
  </div>
  <button class="btn btn-outline-secondary" type="submit" onclick="credentialRegister()">Registrar</button><br>
</div>
<script>
  function credentialRegister(){
    var serviceId = document.getElementById("serviceId");
    var accessKey = document.getElementById("accessKey");
    var secretKey = document.getElementById("secretKey");
    setCookie("serviceId", serviceId.value);
    setCookie("accessKey", accessKey.value);
    setCookie("secretKey", secretKey.value);
    $("#response").animate({
        height: '+=72px'
    }, 300);
  
    $('<div class="alert alert-success">' +
      '<button type="button" class="close" data-dismiss="alert">' +
      '&times;</button>Se ha registrado el acceso</div>').hide().appendTo('#response').fadeIn(1000);
  
    $(".alert").delay(3000).fadeOut(
    "normal",
    function(){
      $(this).remove();
    });
    $("#response").delay(4000).animate({
        height: '-=72px'
    }, 300);
  }
</script>